{
  "name": "@prosopo/provider",
  "version": "0.0.0",
  "author": "Prosopo",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "tsc --build --verbose",
    "cli": "ts-node ./cli/cli.ts",
    "setup": "ts-node ./scripts/setup.ts",
    "start": "node ./dist/cli/start.js",
    "start:test": "NODE_ENV=test && ts-node ./cli/start.ts",
    "serve": "npm run setup && npm run start",
    "mnemonic": "ts-node ./scripts/generateMnemonic.ts",
    "imageserver:start": "ts-node ./scripts/imageserver.ts",
    "test": "NODE_ENV=test ts-mocha \"tests/**/*.test.ts\" --timeout 120000",
    "coverage": "npx c8 npm run test",
    "populate-data": "ts-node ./src/dataUtils/populateDatabase.ts",
    "dev-provider-register": "npm run cli -- provider_register --fee=10 --origin=https://localhost:8282 --payee=Provider --address=$PROVIDER_ADDRESS",
    "dev-provider-stake": "npm run cli -- provider_update --value 2000000000000 --address=$PROVIDER_ADDRESS",
    "dev-provider-dataset": "npm run cli -- provider_add_data_set --file ./tests/mocks/data/captchas.json"
  },
  "dependencies": {
    "@polkadot/api": "^8.7.1",
    "@polkadot/api-contract": "^8.7.1",
    "@polkadot/keyring": "^9.4.1",
    "@polkadot/types": "^8.7.1",
    "@polkadot/types-codec": "^8.7.1",
    "@polkadot/types-create": "^8.7.1",
    "@polkadot/util": "^9.4.1",
    "@polkadot/util-crypto": "^9.4.1",
    "@prosopo/contract": "0.1.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "consola": "^2.15.3",
    "cors": "^2.8.5",
    "cron": "^2.0.0",
    "cron-parser": "^4.4.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongodb": "^4.7.0",
    "pm2": "^5.2.0",
    "yargs": "^17.5.1",
    "yargs-parser": "^21.0.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/yargs": "^17.0.10",
    "c8": "^7.11.3",
    "fs-extra": "^10.1.0",
    "mocha": "^10.0.0",
    "mongodb-memory-server": "^8.6.0",
    "redspot": "^0.13.6",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/prosopo-io/provider.git"
  },
  "license": "GPL-3.0",
  "description": "> NOTE: The easiest way to deploy the Prosopo contract and run the Provider node is via the [integration repository](https://github.com/prosopo-io/integration/). The following instructions explain how to set up the repositories manually.",
  "bugs": {
    "url": "https://github.com/prosopo-io/provider/issues"
  },
  "homepage": "https://github.com/prosopo-io/provider#readme"
}
