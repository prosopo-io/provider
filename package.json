{
  "name": "@prosopo/provider",
  "version": "0.0.0",
  "author": "Prosopo",
  "main": "build/src/index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "tsc --build --verbose",
    "dev": "yarn build && yarn run setup && yarn start",
    "start": "ts-node ./src/cli/cli.ts",
    "setup": "ts-node ./scripts/setupdev.ts",
    "mnemonic": "ts-node ./scripts/generateMnemonic.ts",
    "test": "redspot test",
    "test:mocha": "ts-mocha tests/**/*.test.ts",
    "test:mock": "NODE_ENV=test yarn test",
    "populate-data": "yarn redspot run ./src/dataUtils/populateDatabase.ts",
    "dev-provider-register": "yarn build && yarn start provider_register --fee=10 --serviceOrigin=https://localhost:8282 --payee=Provider --address=$(printenv | grep '^PROVIDER_ADDRESS' | cut -d '=' -f2)",
    "dev-provider-stake": "yarn build && yarn start provider_stake --value 10 --address=$(printenv | grep '^PROVIDER_ADDRESS' | cut -d '=' -f2)",
    "dev-provider-dataset": "yarn build && yarn start provider_add_data_set --file /usr/src/data/captchas.json"
  },
  "dependencies": {
    "@prosopo/contract": "0.0.0",
    "@redspot/chai": "0.13.6",
    "@redspot/decimals": "0.13.6",
    "@redspot/explorer": "0.13.6",
    "@redspot/patract": "0.13.6",
    "@redspot/watcher": "0.13.6",
    "@types/mocha": "^9.0.0",
    "cron": "^1.8.2",
    "cron-parser": "^4.2.1",
    "dotenv": "^14.3.2",
    "express": "^4.17.1",
    "find-up": "^4.0.0",
    "mongodb": "^4.1.4",
    "pm2": "^5.2.0",
    "redspot": "0.13.6",
    "zod": "^3.11.6",

    "@polkadot/types": "7.12.1",
    "@polkadot/util": "8.5.1",
    "@polkadot/util-crypto": "8.5.1",
    "@polkadot/api-contract": "7.12.1",
    "@polkadot/keyring": "8.5.1",

    "consola": "^2.15.0",
    "yargs": "^15.4.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.5",
    "@types/express": "^4.17.13",
    "@types/find-up": "^4.0.0",
    "@types/node": "^17.0.8",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^14.3.2",
    "mocha": "8.4.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/prosopo-io/provider.git"
  },
  "license": "GPL-3.0",
  "types": "./build/src/index.d.ts",
  "description": "> NOTE: The easiest way to deploy the Prosopo contract and run the Provider node is via the [integration repository](https://github.com/prosopo-io/integration/). The following instructions explain how to set up the repositories manually.",
  "bugs": {
    "url": "https://github.com/prosopo-io/provider/issues"
  },
  "homepage": "https://github.com/prosopo-io/provider#readme"
}
