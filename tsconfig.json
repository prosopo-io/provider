{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {

    "target": "esnext",
    "module": "commonjs",

    "paths": {
      "@prosopo/provider": [
        "./src"
      ],
      "@prosopo/provider/*": [
        "./src/*"
      ]
    },

    "rootDirs": [
      "./",
      "./src",
      "./tests",
      "./scripts"
    ],
    "outDir": "./build",

  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./*.ts",
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./scripts/**/*.ts"
  ],
  "references": [ 
    { 
      "path": "../contract" 
    }
  ]
}
