{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {

    "paths": {
      "@prosopo/provider": [
        "./src"
      ],
      "@prosopo/provider/*": [
        "./src/*"
      ]
    },

    "rootDirs": [
      "./",
      "./src",
      "./tests",
      "./scripts"
    ],
    "outDir": "./build",

  },
  "include": [
    "./*.ts",
    "./src/**/*",
    "./tests/**/*",
    "./scripts/**/*"
  ],
  "references": [ 
    { 
      "path": "../contract" 
    }
  ]
}
